/**index.wxss**/
.main_header{
  /* background: url('images/1.jpg'); */
  width: 100%;
  position: relative;
  top:0;
}
.main_header image{
  position: absolute;
  top:0;
  width:100%;
  height:100%;
  z-index: -1;
  box-shadow: 2px 0 5px #C0C0C0;
}
.title {
  margin: 150px auto 0 auto;
  text-align: center;
  color:white;
  padding: 0 30rpx;
}
.title .big{
  font-size: 50rpx;
}
.title .small{
  font-size: 30rpx;
}
.userinfo {
  margin:80rpx auto 120rpx auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  color:white;
}

.avatar {
  overflow: hidden;
  display: block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}



view.content{
  margin-top:20rpx;
  width:70%;
}

button{
  background: none;
  margin-bottom: 50rpx;
  border:0;
  color: #2F4F4F;
  box-shadow: 2px 2px 6px #C0C0C0;
  border-radius: 0;
}
textarea{
  background: lightblue;
  width:100%;
  height:40px;
  font-size: 40px;
}
